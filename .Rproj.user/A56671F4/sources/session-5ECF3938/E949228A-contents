#
# This is the user-interface definition of a Shiny web application. You can
# run the application by clicking 'Run App' above.
#
# Find out more about building applications with Shiny here:
#
#    http://shiny.rstudio.com/
#

library(shiny)
library(shinyWidgets)


country_list <- as.list(read.csv("country_list.csv"))[[1]]
sector_list <- as.list(read.csv("sector_list.csv"))[[1]]




# Define UI for application that draws a histogram
shinyUI(fluidPage(
  fluidRow(

    # Application title
    titlePanel("Input-Output Analysis"),

    # Sidebar with a slider input for number of bins
    sidebarLayout(
      sidebarPanel(
        selectInput("a", "Choose country:", country_list),
        selectInput("b", "Choose sector:", sector_list),
        shinyWidgets::autonumericInput("c",
          "Choose investment (USD):",
          1000000,
          currencySymbol = "$",
          currencySymbolPlacement = "p",
          decimalPlaces = 2,
          digitGroupSeparator = ",",
          decimalCharacter = "."
        )
      ),

      # Show a plot of the generated distribution
      mainPanel(
        style = "border: 2px solid lightgray;",
        textOutput("impact"),
        textOutput("multiplier")
      )
    )
  ),
  fluidRow(
    style = "border-top: 2px solid lightgray;",
    mainPanel(
      plotOutput("sector_plot", width = "100%")
    )
  )
))
